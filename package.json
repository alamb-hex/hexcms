{
  "name": "hexcms",
  "version": "0.3.0",
  "private": true,
  "description": "Git-based Headless CMS with database sync for blazing-fast builds",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "format": "prettier --write \"**/*.{js,ts,tsx,md,json}\"",
    "format:check": "prettier --check \"**/*.{js,ts,tsx,md,json}\"",
    "db:init": "psql $POSTGRES_URL < scripts/init-db.sql",
    "db:reset": "bash scripts/reset-db.sh",
    "sync": "tsx scripts/manual-sync.ts",
    "sync:all": "tsx scripts/manual-sync.ts --all",
    "sync:dry-run": "tsx scripts/manual-sync.ts --all --dry-run"
  },
  "keywords": [
    "cms",
    "headless",
    "git",
    "markdown",
    "nextjs",
    "postgres",
    "database",
    "blog",
    "content-management"
  ],
  "author": "heXcms Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/alamb-hex/hexcms.git"
  },
  "bugs": {
    "url": "https://github.com/alamb-hex/hexcms/issues"
  },
  "homepage": "https://github.com/alamb-hex/hexcms#readme",
  "dependencies": {
    "@neondatabase/serverless": "^1.0.2",
    "@octokit/rest": "^22.0.0",
    "date-fns": "^4.1.0",
    "gray-matter": "^4.0.3",
    "next": "^16.0.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "rehype": "^13.0.2",
    "rehype-highlight": "^7.0.2",
    "rehype-stringify": "^10.0.1",
    "remark": "^15.0.1",
    "remark-gfm": "^4.0.1",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.2",
    "unified": "^11.0.5",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.9.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.0.4",
    "@vitest/ui": "^4.0.2",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.38.0",
    "eslint-config-next": "^16.0.0",
    "eslint-config-prettier": "^10.1.8",
    "jsdom": "^27.0.1",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.16",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.2"
  }
}
